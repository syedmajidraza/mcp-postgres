{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
  "manifestVersion": "1.17",
  "version": "1.0.0",
  "id": "YOUR_APP_ID_GUID",
  "packageName": "com.postgres.mcp.teams",
  "developer": {
    "name": "PostgreSQL MCP",
    "websiteUrl": "https://www.example.com",
    "privacyUrl": "https://www.example.com/privacy",
    "termsOfUseUrl": "https://www.example.com/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "PostgreSQL MCP",
    "full": "PostgreSQL MCP Query Assistant for Microsoft Teams"
  },
  "description": {
    "short": "Execute SQL queries on PostgreSQL directly from Teams",
    "full": "PostgreSQL MCP Query Assistant enables you to execute SQL queries, list tables, and describe database schemas directly within Microsoft Teams conversations using natural language or SQL commands."
  },
  "accentColor": "#336699",
  "composeExtensions": [
    {
      "botId": "YOUR_BOT_ID_GUID",
      "commands": [
        {
          "id": "queryDatabase",
          "type": "query",
          "title": "Query Database",
          "description": "Execute SQL queries or ask questions in natural language",
          "context": ["compose", "commandBox"],
          "parameters": [
            {
              "name": "query",
              "title": "SQL Query or Question",
              "description": "Enter your SQL query or natural language question",
              "inputType": "text"
            }
          ]
        },
        {
          "id": "listTables",
          "type": "action",
          "title": "List Tables",
          "description": "Show all database tables",
          "context": ["compose", "commandBox"]
        },
        {
          "id": "describeTable",
          "type": "query",
          "title": "Describe Table",
          "description": "Get schema information for a table",
          "context": ["compose", "commandBox"],
          "parameters": [
            {
              "name": "tableName",
              "title": "Table Name",
              "description": "Enter the table name",
              "inputType": "text"
            }
          ]
        }
      ],
      "messageHandlers": [
        {
          "type": "link",
          "value": {
            "domains": ["*.yourdomain.com"]
          }
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "yourdomain.com",
    "*.yourdomain.com"
  ],
  "webApplicationInfo": {
    "id": "YOUR_AAD_APP_ID_GUID",
    "resource": "api://botid-YOUR_BOT_ID_GUID"
  }
}
