{
  "name": "syed-mcp-server-extension",
  "displayName": "Syed MCP Server Extension",
  "description": "Manager for all MCP servers from your internal registry - Install, Start, Stop, Configure",
  "version": "1.0.0",
  "publisher": "your-company",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "copilot",
    "registry"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpManager.refreshRegistry",
        "title": "MCP: Refresh Registry",
        "icon": "$(refresh)"
      },
      {
        "command": "mcpManager.installServer",
        "title": "MCP: Install Server",
        "icon": "$(cloud-download)"
      },
      {
        "command": "mcpManager.startServer",
        "title": "MCP: Start Server",
        "icon": "$(play)"
      },
      {
        "command": "mcpManager.stopServer",
        "title": "MCP: Stop Server",
        "icon": "$(debug-stop)"
      },
      {
        "command": "mcpManager.restartServer",
        "title": "MCP: Restart Server",
        "icon": "$(debug-restart)"
      },
      {
        "command": "mcpManager.configureServer",
        "title": "MCP: Configure Server",
        "icon": "$(settings-gear)"
      },
      {
        "command": "mcpManager.viewLogs",
        "title": "MCP: View Server Logs",
        "icon": "$(output)"
      },
      {
        "command": "mcpManager.uninstallServer",
        "title": "MCP: Uninstall Server",
        "icon": "$(trash)"
      },
      {
        "command": "mcpManager.searchRegistry",
        "title": "MCP: Search Registry",
        "icon": "$(search)"
      },
      {
        "command": "mcpManager.showServerDetails",
        "title": "MCP: Show Server Details",
        "icon": "$(info)"
      },
      {
        "command": "mcpManager.setRegistryUrl",
        "title": "MCP: Set Registry URL"
      },
      {
        "command": "mcpManager.startAllServers",
        "title": "MCP: Start All Servers"
      },
      {
        "command": "mcpManager.stopAllServers",
        "title": "MCP: Stop All Servers"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-manager",
          "title": "MCP Servers",
          "icon": "$(server-process)"
        }
      ]
    },
    "views": {
      "mcp-manager": [
        {
          "id": "mcpManager.registryServers",
          "name": "Registry",
          "icon": "$(cloud)",
          "contextualTitle": "Available MCP Servers"
        },
        {
          "id": "mcpManager.installedServers",
          "name": "Installed",
          "icon": "$(package)",
          "contextualTitle": "My MCP Servers"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mcpManager.refreshRegistry",
          "when": "view == mcpManager.registryServers",
          "group": "navigation"
        },
        {
          "command": "mcpManager.searchRegistry",
          "when": "view == mcpManager.registryServers",
          "group": "navigation"
        },
        {
          "command": "mcpManager.startAllServers",
          "when": "view == mcpManager.installedServers"
        },
        {
          "command": "mcpManager.stopAllServers",
          "when": "view == mcpManager.installedServers"
        }
      ],
      "view/item/context": [
        {
          "command": "mcpManager.installServer",
          "when": "view == mcpManager.registryServers && viewItem == registryServer",
          "group": "inline"
        },
        {
          "command": "mcpManager.showServerDetails",
          "when": "view == mcpManager.registryServers && viewItem == registryServer"
        },
        {
          "command": "mcpManager.startServer",
          "when": "view == mcpManager.installedServers && viewItem == installedServer-stopped",
          "group": "inline"
        },
        {
          "command": "mcpManager.stopServer",
          "when": "view == mcpManager.installedServers && viewItem == installedServer-running",
          "group": "inline"
        },
        {
          "command": "mcpManager.restartServer",
          "when": "view == mcpManager.installedServers && viewItem == installedServer-running"
        },
        {
          "command": "mcpManager.configureServer",
          "when": "view == mcpManager.installedServers && viewItem =~ /installedServer/",
          "group": "inline"
        },
        {
          "command": "mcpManager.viewLogs",
          "when": "view == mcpManager.installedServers && viewItem =~ /installedServer/"
        },
        {
          "command": "mcpManager.uninstallServer",
          "when": "view == mcpManager.installedServers && viewItem =~ /installedServer/"
        }
      ]
    },
    "configuration": {
      "title": "MCP Server Manager",
      "properties": {
        "mcpManager.registryUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Internal MCP registry URL"
        },
        "mcpManager.installDirectory": {
          "type": "string",
          "default": "~/.mcp-servers",
          "description": "Directory where MCP servers will be installed"
        },
        "mcpManager.autoStartServers": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start all installed servers on VS Code startup"
        },
        "mcpManager.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python executable"
        },
        "mcpManager.nodePath": {
          "type": "string",
          "default": "node",
          "description": "Path to Node.js executable"
        },
        "mcpManager.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for server start/stop events"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/tar": "^6.1.13",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "tar": "^6.2.0"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/syedmajidraza/mcp-postgres.git"
  }
}
