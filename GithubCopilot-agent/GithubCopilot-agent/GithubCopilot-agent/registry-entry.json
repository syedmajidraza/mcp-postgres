{
  "name": "postgres-mcp",
  "displayName": "PostgreSQL MCP Server",
  "description": "Natural language PostgreSQL database queries with LLM integration. Query, create tables, views, and stored procedures using plain English powered by GitHub Copilot.",
  "version": "1.0.0",
  "author": "Syed Majid Raza",
  "repository": {
    "type": "git",
    "url": "https://github.com/syedmajidraza/mcp-postgres.git"
  },
  "homepage": "https://github.com/syedmajidraza/mcp-postgres",
  "license": "MIT",
  "keywords": [
    "postgresql",
    "database",
    "sql",
    "llm",
    "natural-language",
    "github-copilot",
    "mcp",
    "model-context-protocol"
  ],
  "categories": [
    "database",
    "productivity",
    "developer-tools"
  ],
  "runtime": "python",
  "installationType": "local",
  "installation": {
    "type": "git",
    "url": "https://github.com/syedmajidraza/mcp-postgres.git",
    "steps": [
      "git clone https://github.com/syedmajidraza/mcp-postgres.git",
      "cd mcp-postgres",
      "./install.sh",
      "Configure database in ~/.postgres-mcp/mcp-server/.env",
      "Install VS Code extension from postgres-mcp-copilot-1.0.0.vsix"
    ]
  },
  "configuration": {
    "required": [
      "DB_HOST",
      "DB_PORT",
      "DB_NAME",
      "DB_USER",
      "DB_PASSWORD"
    ],
    "optional": [
      "SERVER_HOST",
      "SERVER_PORT"
    ],
    "configFile": "~/.postgres-mcp/mcp-server/.env"
  },
  "tools": [
    {
      "name": "list_tables",
      "description": "List all tables in a PostgreSQL schema",
      "parameters": {
        "schema": {
          "type": "string",
          "description": "Schema name (default: public)",
          "required": false
        }
      }
    },
    {
      "name": "describe_table",
      "description": "Get detailed schema information for a specific table",
      "parameters": {
        "table_name": {
          "type": "string",
          "description": "Name of the table to describe",
          "required": true
        }
      }
    },
    {
      "name": "query_database",
      "description": "Execute a SELECT query on the PostgreSQL database",
      "parameters": {
        "query": {
          "type": "string",
          "description": "SQL SELECT query to execute",
          "required": true
        }
      }
    },
    {
      "name": "execute_sql",
      "description": "Execute any SQL statement (INSERT, UPDATE, DELETE, CREATE, etc.)",
      "parameters": {
        "sql": {
          "type": "string",
          "description": "SQL statement to execute",
          "required": true
        }
      }
    },
    {
      "name": "create_table",
      "description": "Create a new table in the database",
      "parameters": {
        "table_name": {
          "type": "string",
          "description": "Name of the table to create",
          "required": true
        },
        "columns": {
          "type": "array",
          "description": "Array of column definitions",
          "required": true
        }
      }
    },
    {
      "name": "create_stored_procedure",
      "description": "Create a stored procedure or function",
      "parameters": {
        "procedure_name": {
          "type": "string",
          "description": "Name of the procedure/function",
          "required": true
        },
        "parameters": {
          "type": "string",
          "description": "Procedure parameters",
          "required": false
        },
        "body": {
          "type": "string",
          "description": "Procedure body (PL/pgSQL code)",
          "required": true
        }
      }
    },
    {
      "name": "get_table_indexes",
      "description": "Get all indexes for a specific table",
      "parameters": {
        "table_name": {
          "type": "string",
          "description": "Name of the table",
          "required": true
        }
      }
    },
    {
      "name": "analyze_query_plan",
      "description": "Analyze and explain query execution plan",
      "parameters": {
        "query": {
          "type": "string",
          "description": "SQL query to analyze",
          "required": true
        }
      }
    }
  ],
  "features": [
    "Natural language to SQL conversion using GitHub Copilot LLM",
    "8 comprehensive PostgreSQL tools for database operations",
    "VS Code extension with start/stop/status controls",
    "Schema-aware SQL generation",
    "Support for complex queries (JOINs, subqueries, aggregations)",
    "Create tables, views, stored procedures, and functions",
    "Query plan analysis and optimization",
    "Index management",
    "Cross-platform support (macOS, Linux, Windows)",
    "Educational - shows generated SQL before execution"
  ],
  "requirements": {
    "python": ">=3.8",
    "vscode": ">=1.80.0",
    "extensions": [
      "GitHub Copilot"
    ],
    "database": "PostgreSQL >=10.0"
  },
  "components": {
    "mcpServer": {
      "path": "mcp-server",
      "entrypoint": "server.py",
      "port": 3000,
      "host": "127.0.0.1"
    },
    "vscodeExtension": {
      "path": "vscode-extension",
      "vsix": "postgres-mcp-copilot-1.0.0.vsix",
      "displayName": "PostgreSQL MCP Copilot"
    }
  },
  "endpoints": {
    "health": "http://127.0.0.1:3000/health",
    "mcpV1": "http://127.0.0.1:3000/mcp/v1"
  },
  "documentation": {
    "quickStart": "https://github.com/syedmajidraza/mcp-postgres/blob/main/DEVELOPER_QUICK_START.md",
    "implementation": "https://github.com/syedmajidraza/mcp-postgres/blob/main/IMPLEMENTATION_SUMMARY.md",
    "llmGuide": "https://github.com/syedmajidraza/mcp-postgres/blob/main/LLM_ENHANCED_GUIDE.md",
    "usageExamples": "https://github.com/syedmajidraza/mcp-postgres/blob/main/USAGE_EXAMPLES.md",
    "testing": "https://github.com/syedmajidraza/mcp-postgres/blob/main/TESTING_GUIDE.md",
    "distribution": "https://github.com/syedmajidraza/mcp-postgres/blob/main/DISTRIBUTION_GUIDE.md"
  },
  "examples": [
    "@postgres what's the minimum salary of employees?",
    "@postgres show employees earning more than average",
    "@postgres create a table for product reviews",
    "@postgres find duplicate emails in users table",
    "@postgres show top 10 products by revenue"
  ]
}
