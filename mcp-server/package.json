{
  "name": "@your-org/postgres-mcp",
  "version": "1.0.0",
  "description": "Natural language PostgreSQL database queries with LLM integration",
  "main": "server.py",
  "scripts": {
    "start": "python3 server.py",
    "install": "pip install -r requirements.txt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syedmajidraza/mcp-postgres.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "postgresql",
    "database",
    "sql",
    "llm",
    "natural-language",
    "github-copilot"
  ],
  "author": "Syed Majid Raza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/syedmajidraza/mcp-postgres/issues"
  },
  "homepage": "https://github.com/syedmajidraza/mcp-postgres#readme",
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8"
  },
  "mcp": {
    "version": "1.0.0",
    "protocol": "http",
    "tools": [
      "list_tables",
      "describe_table",
      "query_database",
      "execute_sql",
      "create_table",
      "create_stored_procedure",
      "get_table_indexes",
      "analyze_query_plan"
    ],
    "server": {
      "command": "python3",
      "args": ["server.py"],
      "cwd": "${workspaceFolder}/mcp-server"
    },
    "configuration": {
      "required": ["DB_HOST", "DB_PORT", "DB_NAME", "DB_USER", "DB_PASSWORD"]
    }
  }
}
